<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/topic_library_unselected"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:textColor="@color/incorrect_answer"
            android:fontFamily="@font/bevietnampro_bold"
            android:text="SKIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bevietnampro_semi_bold"
        android:text="You have skipped this question!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="40dp"
        android:background="@color/default_item"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bevietnampro_semi_bold"
        android:text="The answer is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/correctAnswerTxt"
        android:textColor="@color/correct_answer"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bevietnampro_bold_italic"
        android:text="correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>