<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_color"
    android:paddingBottom="60dp"
    android:layout_height="match_parent"
    tools:context=".TopicFragment">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/noTopicLayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/topic_lib"/>
        <TextView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_bold"
            android:text="CREATE TOPICS TO START LEARNING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addTopicBtn"
            android:padding="20dp"
            android:textColor="@color/primary_text_color"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bevietnampro_bold"
            app:backgroundTint="@null"
            android:background="@drawable/ripple_login_btn"
            android:text="ADD TOPIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topicRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>