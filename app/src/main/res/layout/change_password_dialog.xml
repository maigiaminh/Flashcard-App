<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/secondary_color"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:fontFamily="@font/bevietnampro_bold"
        android:textColor="@color/white"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/bevietnampro_regular"
        android:text="Enter your old and new password to change."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/oldPasswordEdt"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/tertiary_text_color"
        android:hint="Old Password"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/newPasswordEdt"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/tertiary_text_color"
        android:hint="New Password"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/confirmedPasswordEdt"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/tertiary_text_color"
        android:hint="Confirm Password"
        android:background="@drawable/custom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:textColor="@color/tertiary_text_color"
            android:id="@+id/cancelBtn"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:text="HỦY"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:layout_marginStart="20dp"
            android:textColor="@color/tertiary_text_color"
            android:id="@+id/acceptBtn"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:text="XÁC NHẬN"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>