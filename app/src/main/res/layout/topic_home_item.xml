<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="25dp"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/topic_bg"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topicItemNameTxt"
            android:text="Topic Name"
            android:textSize="20sp"
            android:fontFamily="@font/bevietnampro_bold"
            android:textColor="@color/primary_text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/learnerCount"
            android:textSize="16sp"
            android:fontFamily="@font/bevietnampro_bold"
            android:textColor="@color/primary_text_color"
            android:text="Learners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/termsCount"
        android:text="0 vocabularies"
        android:fontFamily="@font/bevietnampro_bold"
        android:textSize="16sp"
        android:textColor="@color/tertiary_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/topicUserImg"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/flashcard_icon"
            app:shapeAppearanceOverlay="@style/circle"
            app:strokeWidth="1dp"
            app:strokeColor="@color/tertiary_text_color"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/topicUserName"
            android:text="Topic Owner"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_bold"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>